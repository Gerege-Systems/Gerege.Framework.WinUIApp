<Page
    x:Class="WinUIAppExample.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="Page_Loaded"
    d:Title="HomePage">

    <Grid Background="Gray">
        <TextBox IsReadOnly="True" Name="TitleBox" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Fetching title from server ..." VerticalAlignment="Top" Width="550" Margin="0,100,0,0"/>
        <Button Name="LoadModuleBtn" Content="Модуль унших" HorizontalAlignment="Center" VerticalAlignment="Center" Height="42" Width="550" Click="Button_Click"/>
    </Grid>
</Page>
